
.formDetail{
    background: #fff;
    margin-bottom: 25rpx;   
}

.formDetail .formContent{
    overflow: hidden;
    padding: 30rpx 0 70rpx 0;
    position: relative;
    border-bottom: 1px solid #ddd;
}

.formDetail .formContent .detail_l{
    float: left; 
    margin-left: 25rpx;
}

.formDetail .formContent .detail_l image{
    width: 85rpx;
    height: 85rpx; 
    display: block; 
    border-radius: 8rpx;
}

.formDetail .formContent .detail_c{
    float: left;
    margin-left: 15rpx;
    font-size: 28rpx;
    line-height: 45rpx;
}

.formDetail .formContent .detail_c text{
    display: block;
}

.formDetail .formContent .detail_c text:nth-child(2){
    font-size: 26rpx;
    line-height: 32rpx;
}

.formDetail .formContent .detail_c text:nth-child(3){
    font-size: 28rpx;
    line-height: 40rpx;
    margin-top: 10rpx;
    color: #666;
}

.formDetail .formContent .detail_c text:nth-child(4){
    font-size: 28rpx;
    color: #000;
    font-weight: bold;
}

.formDetail .formContent .detail_c .shop{
    font-size: 32rpx;
    font-weight: bold;
    color: #000;
    line-height: 50rpx;
}

.formDetail .formContent .detail_r{
    float: right;
    text-align: right;
    font-size: 28rpx;
    height: 100%;
    margin-right: 20rpx;
}

.formDetail .formContent .detail_r text.form_state{
    width: 100%;
    height: 30rpx;
    line-height: 40rpx;
    color: #06c1ae;
    display: block;
}

.formDetail .formContent .detail_r text.assess{
    padding: 0 20rpx;
    height: 48rpx;
    font-size: 28rpx;
    line-height: 48rpx;
    border-radius: 5rpx;
    display: block;
    text-align: center;
    color: #2395ff;
    border: 1px solid #2395ff;
    position: absolute;
    bottom: 30rpx;
    right: 20rpx;
}

.formDetail .formContent .detail_r text.pay{
    color: #ff5500;
    border: 1px solid #ff5500;
}

.formDetail .formContent .detail_r text.cancle{
    right: 140rpx;
}
