  color:#fff;
  font-size: 32rpx;
  padding:0 5rpx;
  margin-right:30rpx;
  border-radius: 5rpx;
}
.Package .firstline .zhekou{
  margin-top:30rpx;
}
.Package .firstline .zhekou text{
  font-size: 32rpx;
  color:#00c3ad;
}
.Package .firstline>view:nth-child(2) image{
  width:40rpx;
  height:40rpx;
  vertical-align:middle;
}

.Package .secondLine .top{
  padding:20rpx 30rpx;
  font-size:36rpx;
  color:#313031;
}
.Package .secondLine .top text{
  background: #00c3ad;
