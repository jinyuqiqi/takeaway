/* pages/form/details/index.wxss */
page{
    background: #eee;
    font-size: 30rpx;
}

.box{
    width: 100%;
    text-align: center;
}
/* 头部样式*/
.box .header{
    background: #fff;
    padding-top: 10rpx;
    padding-bottom: 50rpx;
}

.box .header image{
    width: 150rpx;
    height: 150rpx;
    display: block;
    margin: 0 auto;
}

.box .header text{
    display: block;
    margin: 10rpx auto 0;
    
}

.box .header text.txt1{
    font-size: 32rpx;
    color: #000;
    font-weight: bold;
}

.box .header text.txt2{
    font-size: 28rpx;
    color: #666;
}

.box .header text.txt3{
    color: #fff;
    margin-top: 40rpx;
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #2395ff; 
    border-radius: 8rpx;
}

/*订单信息*/
.box .content{
    margin-top: 20rpx;
    background: #fff;
    padding: 0 20rpx;
}

.box .content .shop{
    height: 80rpx;
    line-height: 80rpx;
    font-weight: bold;
    overflow: hidden;
    border-bottom: 1px solid #eee;
}

.box .content .shop image:first-child{
    width: 60rpx;
    height: 60rpx;
    display: block;
    margin-top: 10rpx;
    float: left;
}

.box .content .shop text{
    display: block;
    float: left;
    margin-left: 20rpx;
}

.box .content .shop image:last-child{
    width: 50rpx;
    height: 50rpx;
    display: block;
    margin-top: 15rpx;
    float: right;
}

.box .content .foods{
    height: 80rpx;
    line-height: 80rpx;
    overflow: hidden;
    color: #333;
}

.box .content .foods text{
    display: block;
    float: right;
}

.box .content .foods text:first-child{
    float: left;
}

.box .content .foods text:nth-child(2){
    margin-left: 60rpx;
}

.box .content .foods text:last-child{
    font-weight: bold;
}

.box .content .others text:last-child{
    font-weight: normal;
}

.box .content .discount{
    border-bottom: 1px solid #eee;
}

.box .content .discount image{
    float: left;
    width: 40rpx;
    height: 40rpx;
    display: block;
    margin-top: 20rpx;
}

.box .content .discount text:nth-child(2){
    float: left;
    margin-left: 5rpx;
}

.box .content .discount text:last-child{
    font-weight: normal;
}

.box .content .contact image{
    float: left;
    width: 40rpx;
    height: 40rpx;
    display: block;
    margin-top: 20rpx;
}

.box .content .contact text:nth-child(2){
    color: #2395ff;
    font-weight: bold;
}

.box .content .discount text:last-child{
    font-size: 32rpx;
    font-weight: bold;
}

.box .content .title{
    height: 80rpx;
    line-height: 80rpx;
    text-align: left;
    font-weight: bold;
}

.box .content .item{
    overflow: hidden;
    line-height: 80rpx;
    border-bottom: 1rpx solid #eee;
}

.box .content .item:after { 
    content:"."; 
    display:block; 
    clear:both; 
    height:0; 
} 

.box .content .item text{
    display: block;
}

.box .content .item text:first-child{
    
    float: left;
}

.box .content .item text:nth-child(2){
    float: right;
    color: #666;
}

.box .content .address text:first-child{
    text-align: left;
    width: 20%;
}

.box .content .address text:nth-child(2){
    margin: 23rpx 0;
    width: 65%;
    float: right;
    line-height: 40rpx;
    text-align: right;
}

