    flex-direction: row;
    overflow: hidden;
    z-index: 100;
    background: #fff;
    border-bottom: 1px solid #d0d0d0;
}

 .box .formHead .fixed-box .form_state{ 
  width: 25%;
  text-align: center;
  border-bottom: 2px solid #fff;
}

.box .formHead .fixed-box .active{
  border-bottom: 2px solid #06c1ae;
  color: #06c1ae;
}

