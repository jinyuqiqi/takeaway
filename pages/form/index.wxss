.box .wrap{
    margin-top: 20rpx;
}

.load-notice{
    width: 100%;
    text-align: center;
    font-size: 30rpx;
}

.load-notice .loading{
    width: 100%;
    text-align: center;
    height: 50rpx;
    line-height: 50rpx;
}


.load-notice .endding{
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    background: #ededed;
    color: #8b8b8d;
    position: relative;
}

.load-notice .endding .line{
    width: 240rpx;
    height: 1px;
    background: #d8dcda;
    display: inline-block;
    position: absolute;
    left: 20rpx;
    top: 59rpx;
}
.load-notice .endding .line_r{
    width: 240rpx;
    height: 1px;
    background: #d8dcda;
    display: inline-block;
    position: absolute;
    right: 20rpx;
    top: 59rpx;
}


.formEmpty{
    width: 100%;
    text-align: center;
}

.formEmpty image{
  width: 200rpx;
  height: 210rpx;
  display: block;
  margin: 300rpx auto 20rpx;
}