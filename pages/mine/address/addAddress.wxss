/* pages/mine/address/addAdress.wxss */
page{
    background: #eee;
}
.box{
    width: 100%;
    font-size: 32rpx;
}
/*t标题样式*/
.box .title{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background: #f9f9f9;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.box .title image{
    width: 60rpx;
    height: 60rpx;
    display: block;
    position: absolute;
    top: 20rpx;
    left: 10rpx;
}

.box .title text{
    display: block;
    text-align: center;
}


/*填写地址详细信息样式  */
.box .content{
    line-height: 100rpx;
    background: #fff;
    font-size: 30rpx;
}

.box .content .item{
    border-bottom: 1px solid #eee;
    overflow: hidden;
}

.box .content .item text.item_txt{
    float: left;
    margin-left: 30rpx;
    width: 18%;
    font-weight: bold;
}

/* .box .content .item .item_ads{
    float: right;
    text-align: right;
    margin-right: 10rpx;
    color: #bababa;
} */

.box .content .item .picker{
    float: right;
    text-align: right;
    margin-right: 10rpx;
    color: #000;
    width: 60%;
    font-size: 28rpx;
}

.box .content .item input{
    float: left;
    height: 100rpx;
    line-height: 100rpx;
    width: 75%;
    font-weight: bold;
    color: #000;
    font-size: 30rpx;
}

.box .content .item image{
    width: 50rpx;
    height: 50rpx;
    display: block;
    float: right;
    margin-top: 25rpx;
    margin-right: 15rpx;
}

.box .content .item_dtl text{
    margin-left: 30rpx;
    width: 18%;
    font-weight: bold;
    
}

.box .content .item_dtl textarea{
    overflow: auto;
    height: 200rpx;
    padding: 0 40rpx;
    font-weight: bold;
    color: #000;
    font-size: 30rpx;
    line-height: 36rpx;
}


/*设为默认开关样式  */
.box .save{
    height: 100rpx;
    line-height: 100rpx;
    background: #fff;
    margin-top: 20rpx;
    padding: 0 30rpx;
    color: #000;
    font-weight: bolder;
    overflow: hidden;
}

.box .save text{
    float: left;
    display: block;
}

.box .save switch{
    float: right;
}

.box .delete{
    color: #f50a10;
    text-align: center;
}

.box .delete text{
    display: block;
    width: 100%;
}

.saveBtn{
      margin: 20rpx auto 0;
      width: 100%;
      height: 100rpx;
      line-height: 100rpx;
      border-radius: 0;
      font-size: 32rpx; 
}



