/* pages/mine/balance/index.wxss */
page{
    background: #f5f5f9;
}
.box{
    width: 100%;
    font-size: 32rpx;
}

.box .balance{
    width: 100%;
    height: 200rpx;
    color: #eee;
    padding: 60rpx 0 60rpx 60rpx;
    background: #43CD80;
}

.box .balance text{
    display: block;
}

.box .balance text:last-child{
    font-size: 80rpx;
    font-weight: 500;
    color: #fff;
    line-height: 180rpx;
}

.box .rechare{
    line-height: 100rpx;
    margin-top: 60rpx;
    text-align: center;
    overflow: hidden;
    background: #fff;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
}

.box .rechare text.txt{
    display: block;
    float: left;
    color: #000;
    font-weight: 600;
    margin-left: 40rpx;
}

.box .rechare text.mark{
    display: block;
    float: right;
    color: #999999;
    margin-right: 20rpx;
}

.box .rechare input{
    display: block;
    float: left;
    width: 300rpx;
    height: 98rpx;
    line-height: 100rpx;
    margin-left: 25rpx;
    text-align: left;
    font-size: 38rpx;
    font-weight: 600;
}

.btn{
    width: 90%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 38rpx;
    margin-top: 30rpx;
}