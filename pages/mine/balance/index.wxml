<view class="box">
    <view class='balance'>
        <text>账户余额(元)</text>
        <text>{{balance}}</text>
    </view>
    <view class='rechare'>
        <text class="txt">充值金额</text>
        <input type='number' placeholder='请输入充值金额' placeholder-style='color: #c7c7cd;font-size: 32rpx;font-weight: normal'></input>
        <text class='mark'>(金额单位:￥元)</text>
    </view>
    <button class='btn' type='primary' bindtap="recharge">确认充值</button>
</view>
