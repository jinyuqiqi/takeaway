/* pages/mine/coupon/index.wxss */
page{
    background: #eee;
}

.box{
    font-size: 32rpx;
}
/* 标题样式*/
.box .title{
    height: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #fff;
    font-weight: bold;
    background: #43CD80;
    text-align: center;
    position: relative;
}

.box .title image{
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 25rpx;
    
}

.box .title image.img_l{
    width: 40rpx;
    height: 40rpx;
    top: 30rpx;
    left: 20rpx;
}

.box .title image.img_r{
    right: 20rpx;
}

/*导航栏样式*/
.box .nav{
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    font-size: 34rpx;
    color: #000;
    background: #fff;
    text-align: center;
    border-bottom: 1px solid #d0d0d0;
}

.box .nav text{
    width: 33%;
    height: 97rpx;
    display: inline-block;
    border-bottom: 1px solid #FFF;
}

.box .nav text.active{
    color: #43CD80;
    border-bottom: 2px solid #43CD80;
}

/* 优惠券样式*/
.content{
    padding: 0 20rpx;
    margin-top: 10rpx;
    overflow: hidden;
}

.content .coupon{
    height: 190rpx;
    border-radius: 15rpx;
    background: #fff;
    margin-top: 30rpx;
    position: relative;
}

.content .coupon .coupon-detail{
    overflow: hidden;
}

.content .coupon .coupon-detail .coupon-detail-img{
    float: left;
    width: 190rpx;
    height: 190rpx;
    color: #fff;
    border-radius:15rpx 0 0 15rpx;
    background: linear-gradient(to right, #ff5c0a, #ff9401);
    background: -webkit-linear-gradient(to right, #ff5c0a, #ff9401);
    background: -moz-linear-gradient(to right, #ff5c0a, #ff9401);
}

.content .coupon .coupon-detail .coupon-detail-img view{
    margin-top: 20rpx;
    text-align: center;
    font-size: 40rpx;
    
}

.content .coupon .coupon-detail .coupon-detail-img view text{
    font-size: 80rpx;
    font-weight: 500;
    
}

.content .coupon .coupon-detail .coupon-detail-img text.condition{
    display: block;
    text-align: center;
    margin: 0 auto;
    font-size: 30rpx;
}

.content .coupon .coupon-detail .coupon-detail-type{
    float: left;
    height: 190rpx;
    margin-left: 30rpx;
    overflow: hidden;
}

.content .coupon .coupon-detail .coupon-detail-type text:first-child{
    display: block;
    line-height: 80rpx;
    font-size: 40rpx;
    font-weight: 500;
}

.content .coupon .coupon-detail .coupon-detail-type text:last-child{
    display: inline-block;
    width: 100%;
    font-size: 28rpx;
    color: #999;
    margin-top: 30rpx;
}

.content .coupon .circle{
    position: absolute;
    width: 30rpx;
    height: 30rpx;
    left: 175rpx;
    background: #eee;
    border-radius: 50%;
}
.content .coupon .circle_t{
    top: -13rpx;
}
.content .coupon .circle_b{
    bottom: -13rpx;
}

/*没有代金券时的页面样式*/
.box .empty{
    width: 100%;
    margin-top: 200rpx;
    text-align: center;
}

.box .empty .wrap_img{
    width: 220rpx;
    height: 220rpx;
    margin: 0 auto;
    border-radius: 50%;
    background: #fff;
    position: relative;
}

.box .empty .wrap_img image{
    width: 150rpx;
    height: 150rpx;
    display: block;
    position: absolute;
    top: 35rpx;
    left: 35rpx; 
}

.box .empty text{
    color: #768491;
    font-size: 36rpx;
    margin-top: 50rpx;
    display: block;
}

.box .empty text:last-child{
    margin: 50rpx auto;
    width: 340rpx;
    height: 80rpx;
    color: #fff;
    line-height: 80rpx;
    background: #ff2d4b;
    border-radius: 45rpx;

}



