.head{
  padding-top:30rpx;
  padding-bottom:20rpx;
  position: relative;
  background: #fff;
}
.head image{
  width:56rpx;
  height:55rpx;
  margin-bottom: 15rpx;
  margin-left:20rpx;
  margin-right:20rpx;
}
.head input{
  width:65%;
  height:80rpx;
  border:1rpx solid #bdbabd;
  display: inline-block;
}
.head icon{
  position: absolute;
  left:100rpx;
  top:50rpx;
}
.head text{
  padding:19rpx 30rpx;
  background: #0092ff;
  position: absolute;
  bottom:30rpx;
}
